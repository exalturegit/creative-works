<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.atm">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".roomdatabase.DetailsDatabaseInstance"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/exalture"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".depositorwithdraw.DepositOrWithdrawActivity" />
        <activity android:name=".ministatement.TransactionDetailsActivity" />
        <activity android:name=".transfer.TransactionSuccessful" />
        <activity android:name=".pinchange.PinChangeActivity" />
        <activity
            android:name=".ministatement.MiniStatementActivity"
            android:configChanges="screenSize" />
        <activity android:name=".depositorwithdraw.BalanceActivity" />
        <activity android:name=".transfer.TransferActivity" />
        <activity
            android:name=".splashscreen.SplashscreenActivity"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".others.OthersActivity" />
        <activity
            android:name=".readpinnumber.PinNumberActivity"
            android:finishOnTaskLaunch="true" />
        <activity
            android:name=".accountdetails.AccountNumberActivity"
            android:finishOnTaskLaunch="true" />
        <activity
            android:name=".dashboard.MainActivity"
            android:finishOnTaskLaunch="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>